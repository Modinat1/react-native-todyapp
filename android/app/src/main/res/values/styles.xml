<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base App Theme -->
  <style name="AppTheme" parent="Theme.EdgeToEdge">
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    <item name="colorPrimary">@color/app_primary</item>
    <item name="colorPrimaryDark">@color/app_primary_dark</item>
    <item name="colorAccent">@color/app_primary</item>
    <item name="android:statusBarColor">#ffffff</item>
    
    <!-- Apply custom picker themes -->
    <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
    <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
  </style>

  <!-- Date Picker Theme -->
  <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <!-- Selected date circle and header background -->
    <item name="colorPrimary">@color/datePicker_headerBackground</item>
    <item name="android:colorPrimary">@color/datePicker_headerBackground</item>
    
    <!-- Accent color for selected elements -->
    <item name="colorAccent">@color/datePicker_colorAccent</item>
    <item name="android:colorAccent">@color/datePicker_colorAccent</item>
    
    <!-- Header text color (month/year) -->
    <item name="android:textColorPrimary">@color/datePicker_textColorPrimary</item>
    
    <!-- Calendar numbers color -->
    <item name="android:textColorSecondary">@color/black</item>
    
    <!-- Active/selected state -->
    <item name="colorControlActivated">@color/datePicker_colorAccent</item>
    <item name="android:colorControlActivated">@color/datePicker_colorAccent</item>
    
    <!-- Dialog background -->
    <item name="android:windowBackground">@color/white</item>
    
    <!-- Button colors (OK/CANCEL) -->
    <item name="buttonBarButtonStyle">@style/DatePickerButtonStyle</item>
  </style>

  <!-- Time Picker Dialog Theme -->
  <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">

    <!-- Selected time background (header panel) -->
    <item name="colorPrimary">@color/timePicker_background</item>
    <item name="android:colorPrimary">@color/timePicker_background</item>
    
    <!-- Clock hand and selected number circle -->
    <item name="colorAccent">@color/timePicker_accent</item>
    <item name="android:colorAccent">@color/timePicker_accent</item>
    
    <!-- Clock hand dot and active elements -->
    <item name="colorControlActivated">@color/timePicker_accent</item>
    <item name="android:colorControlActivated">@color/timePicker_accent</item>
    
    <!-- Selected time text (in header) -->
    <item name="android:textColorPrimary">@color/timePicker_textColor</item>
    
    <!-- Clock numbers color -->
    <item name="android:textColorSecondary">@color/timePicker_clockNumberColor</item>
    
    <!-- Clock face background -->
    <item name="android:colorBackground">@color/timePicker_numbersBackgroundColor</item>
    
    <!-- Dialog background -->
    <item name="android:windowBackground">@color/white</item>
    
    <!-- Button colors (OK/CANCEL) -->
    <item name="buttonBarButtonStyle">@style/TimePickerButtonStyle</item>
  </style>

  <!-- Date Picker Button Style -->
  <style name="DatePickerButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textColor">@color/datePicker_colorAccent</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- Time Picker Button Style -->
  <style name="TimePickerButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textColor">@color/timePicker_accent</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- Splash Screen Theme -->
  <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/splashscreen_background</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
  </style>
</resources>


